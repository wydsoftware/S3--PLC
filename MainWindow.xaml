<Window x:Class="S3PLCDataCollector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="汇川S3 PLC数据采集系统" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged">
    
    <Window.Resources>
        <!-- 样式定义 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StartButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StopButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#34495E" Padding="10">
            <TextBlock Text="汇川S3 PLC数据采集系统" 
                       Style="{StaticResource HeaderTextStyle}" 
                       Foreground="White" 
                       FontSize="20" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- 控制面板 -->
        <Border Grid.Row="1" Background="#ECF0F1" Padding="10" BorderBrush="#BDC3C7" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 连接配置 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="PLC IP:" Style="{StaticResource StatusTextStyle}" FontWeight="Bold"/>
                    <TextBox x:Name="txtPLCIP" Width="120" Height="25" Margin="5,2" 
                             VerticalContentAlignment="Center" Text="192.168.1.2"/>
                    
                    <TextBlock Text="端口:" Style="{StaticResource StatusTextStyle}" FontWeight="Bold" Margin="15,2,5,2"/>
                    <TextBox x:Name="txtPLCPort" Width="60" Height="25" Margin="5,2" 
                             VerticalContentAlignment="Center" Text="502"/>
                    
                    <TextBlock Text="间隔(秒):" Style="{StaticResource StatusTextStyle}" FontWeight="Bold" Margin="15,2,5,2"/>
                    <TextBox x:Name="txtReadInterval" Width="60" Height="25" Margin="5,2" 
                             VerticalContentAlignment="Center" Text="5"/>
                    
                    <Button x:Name="btnApplyConfig" Content="应用配置" Style="{StaticResource ButtonStyle}" 
                            Click="BtnApplyConfig_Click" Margin="15,2,5,2"/>
                </StackPanel>
                
                <!-- 状态信息 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="连接状态:" Style="{StaticResource StatusTextStyle}" FontWeight="Bold"/>
                    <TextBlock x:Name="txtConnectionStatus" Text="未连接" Style="{StaticResource StatusTextStyle}" 
                               Foreground="Red" FontWeight="Bold"/>
                    
                    <TextBlock Text="采集状态:" Style="{StaticResource StatusTextStyle}" FontWeight="Bold" Margin="20,2,5,2"/>
                    <TextBlock x:Name="txtCollectionStatus" Text="已停止" Style="{StaticResource StatusTextStyle}" 
                               Foreground="Orange" FontWeight="Bold"/>
                    
                    <TextBlock Text="最后更新:" Style="{StaticResource StatusTextStyle}" FontWeight="Bold" Margin="20,2,5,2"/>
                    <TextBlock x:Name="txtLastUpdate" Text="--" Style="{StaticResource StatusTextStyle}"/>
                </StackPanel>
                
                <!-- 控制按钮 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnStart" Content="启动采集" Style="{StaticResource StartButtonStyle}" 
                            Click="BtnStart_Click"/>
                    <Button x:Name="btnStop" Content="暂停采集" Style="{StaticResource StopButtonStyle}" 
                            Click="BtnStop_Click" IsEnabled="False"/>
                    <Button x:Name="btnRefresh" Content="刷新数据" Style="{StaticResource ButtonStyle}" 
                            Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 设备数据展示 -->
        <Border Grid.Row="2" Margin="10" BorderBrush="#BDC3C7" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="设备数据实时监控" Style="{StaticResource HeaderTextStyle}" 
                           Background="#F8F9FA" Padding="10"/>
                
                <DataGrid Grid.Row="1" x:Name="dgDeviceData" Style="{StaticResource DataGridStyle}" 
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="设备名称" Binding="{Binding DeviceName}" Width="120"/>
                        <DataGridTextColumn Header="设备地址" Binding="{Binding DeviceAddress}" Width="80"/>
                        <DataGridTextColumn Header="当前值" Binding="{Binding CurrentValue, StringFormat=F2}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#2C3E50"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="最后更新时间" Binding="{Binding LastUpdateTime, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                        <DataGridTextColumn Header="连接状态" Binding="{Binding ConnectionStatus}" Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="已连接">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Trigger>
                                        <Trigger Property="Text" Value="未连接">
                                            <Setter Property="Foreground" Value="Red"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- 日志面板 -->
        <Border Grid.Row="3" Margin="10,0,10,10" BorderBrush="#BDC3C7" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Background="#F8F9FA">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="系统日志" Style="{StaticResource HeaderTextStyle}" Padding="10"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10">
                        <Button x:Name="btnClearLog" Content="清空日志" Style="{StaticResource ButtonStyle}" 
                                Click="BtnClearLog_Click" Padding="10,5"/>
                        <CheckBox x:Name="chkAutoScroll" Content="自动滚动" IsChecked="True" 
                                  VerticalAlignment="Center" Margin="10,0"/>
                    </StackPanel>
                </Grid>
                
                <ScrollViewer Grid.Row="1" x:Name="logScrollViewer" Margin="5" 
                              VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtLog" Background="#FEFEFE" Padding="10" 
                               FontFamily="Consolas" FontSize="11" 
                               TextWrapping="Wrap" Text="系统启动中...\n"/>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="4" Background="#34495E">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            
            <StatusBarItem Grid.Column="0">
                <TextBlock x:Name="txtStatusMessage" Text="就绪" Foreground="White"/>
            </StatusBarItem>
            
            <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            
            <StatusBarItem Grid.Column="2">
                <TextBlock x:Name="txtDeviceCount" Text="设备: 0/48" Foreground="White"/>
            </StatusBarItem>
            
            <StatusBarItem Grid.Column="3">
                <TextBlock x:Name="txtCurrentTime" Text="" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>